# script for git completion
if [ -f ~/git-completion.bash ]; then
  source ~/.git-completion.bash
fi
# aliases
if [ -f ~/.bash_aliases ]; then
  source ~/.bash_aliases
fi

# environment variables
if [ -f ~/.env_var ]; then
  source ~/.env_var
fi

# run startx at login
if [[ $(tty) == /dev/tty1 ]]; then
  exec startx
fi
# Run twolfson/sexy-bash-prompt
if [ -f ~/.bash_prompt ]; then
  source ~/.bash_prompt
fi
