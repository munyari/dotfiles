# vim: ft=muttrc
set folder      = imaps://imap.gmail.com/
set imap_user   = fundirap@gmail.com
set imap_pass   = "`pass mail/gmail.com/fundirap`"
set postponed   = "+[Gmail]/Drafts"
set record      = "+[Gmail]/Sent Mail"

# Store message headers locally to speed things up.
# If hcache is a folder, Mutt will create sub cache folders for each account which may speeds things up even more.
set header_cache = ~/.cache/mutt

# Store messages locally to speed things up, like searching message bodies.
# Can be the same folder as header_cache.
# This will cost important disk usage according to your e-mail amount.
set message_cachedir = ~/.cache/mutt

# Specify where to save and/or look for postponed messages.
set postponed = +[Gmail]/Drafts

# Allow Mutt to open new imap connection automatically.
unset imap_passive

# Keep IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# How often to check for new mail (time in seconds).
set mail_check = 120

# smtp setup
set from     = contact@panashefundira.me
set use_from = yes

set smtp_url = "smtp://fundirap@smtp.gmail.com:587/"
set smtp_pass = $imap_pass
set ssl_force_tls = yes
unset imap_passive # allow mutt to open new imap connection automatically
set certificate_file = ~/.mutt/certificates

macro index,pager I  O  "Mark as read"
macro index,pager U  O  "Mark as unread"
macro index,pager ga "=[Gmail]/All Mail"  "Go to all mail"
macro index,pager gs =[Gmail]/Starred "Go to 'Starred'"
macro index,pager gd =[Gmail]/Drafts  "Go to 'Drafts'"
macro index,pager gl ?       "Go to 'Label'"
macro index,pager gi =INBOX     "Go to inbox"
# macro index,pager gt "=[Gmail]/Sent Mail" "Go to 'Sent Mail'"
macro index,pager gt =Sent "Go to 'Sent Mail'"
macro index,pager d "=[Gmail]/Trash" "Trash"
macro index,pager +  =[Gmail]/Important "Mark as important"
macro index,pager !  =[Gmail]/Spam "Report spam"
macro index,pager e  "=[Gmail]/All Mail" "Archive conversation"

folder-hook +INBOX 'macro index,pager y "=[Gmail]/All Mail" "Archive conversation"'
folder-hook +[Gmail]/Trash macro index,pager y =INBOX "Move to inbox"
folder-hook +[Gmail]/Starred bind  index,pager y flag-message #"Toggle star"

set alias_file   = ~/.mutt/alias # where to store aliases
set mailcap_path = ~/.mutt/mailcap # entries for filetypes
set tmpdir       = ~/.mutt/temp
set signature    = ~/.mutt/sig # my signature file

# Basic Options
set timeout = 3     # idle time before scanning
set mail_check = 0  # min time between scans
unset move          # gmail does that
set delete          # don't ask, just do
unset confirmappend # don't ask, just do!
set quit            # don't ask, just do!!
unset mark_old      # read/new is good for me
set pipe_decode     # strip headers and eval mimes when piping
set thorough_search # strip headers and eval mimes before searching

# Sidebar patch
set sidebar_divider_char = '│'
set sidebar_visible = yes
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set sidebar_short_path # Shorten mailbox names
set mail_check_stats
bind index,pager B sidebar-toggle-visible # Use 'B' to switch sidebar on and off
# set sidebar_width = 24
color sidebar_new color221 color233

# Status Bar
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# Header Options -------------------------------------
ignore *                                # ignore all headers
unignore from: reply-to: to: cc: date: subject: user-agent:   # show only these
unhdr_order *                           # some distros order things by default
hdr_order from: reply-to: to: cc: date: subject: user-agent:  # and in this order

# Account Settings -----------------------------------

# Default inbox.
set spoolfile = +INBOX

# Alternate email addresses.
alternates fundirap@student.mville.edu contact@panashefundira.me

# # Mailboxes to show in the sidebar.
# mailboxes +INBOX +Archive
mailboxes +INBOX \
          "+[Gmail]/Sent Mail" \
          +Archive \
          "+[Gmail]/All Mail" \
          +Drafts \
          +tor-dev \
          +pass \
          +gpg-users \
          +gpg-announce \
          +gpg-dev \
          +Trash \

# Other special folders.
set mbox      = "+[Gmail]/All Mail"

# Index view options
set date_format = "%m/%d"
set index_format = "[%Z] %D %-20.20L %s"
# set sort = threads # like gmail
set sort = reverse-threads # like gmail
# set sort_aux = reverse-last-date-received # like gmail
set sort_aux = reverse-last-date-received
set uncollapse_jump # don't collapse on an unread message
set sort_re # thread based on regex
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"


# Index Key bindings
bind index gg       first-entry
bind index G        last-entry

bind index R        group-reply
bind index <tab>    sync-mailbox
bind index <space>  collapse-thread

# Ctrl-R to mark all as read
macro index \Cr "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "mark all messages as read"

# Sync email
macro index O "<shell-escape>offlineimap<enter>"           "run offlineimap to sync all mail"
macro index o "<shell-escape>offlineimap -qf INBOX<enter>" "run offlineimap to sync inbox"

# Saner copy/move dialogs
macro index C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"
macro index M "<save-message>?<toggle-mailboxes>" "move a message to a mailbox"

# Sidebar Navigation ---------------------------------
bind index,pager <down>   sidebar-next
bind index,pager <up>     sidebar-prev
bind index,pager <right>  sidebar-open

# Pager View Options ---------------------------------
set pager_index_lines = 10 # number of index lines to show
set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/plain text/enriched text/html

# Pager Key Bindings ---------------------------------
bind pager k   previous-line
bind pager j   next-line
bind pager gg  top
bind pager G   bottom

bind pager R  group-reply

# View attachments properly.
bind attach <return> view-mailcap

macro pager \cb <pipe-entry>'urlview'<enter> "call urlview to open links"
#
# Compose View Options -------------------------------
set realname = "Panashe M. Fundira"  # who am i?
set envelope_from                    # which from?
set sig_dashes                       # dashes before sig
set sig_on_top                       # signature before quoted reply (bad netiquette?)
set edit_headers                     # show headers when composing
set fast_reply                       # skip to compose when replying
set askcc                            # ask for CC:
set fcc_attach                       # save attachments with the body
unset mime_forward                   # forward attachments as part of body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set attribution = "On %d, %n wrote:" # format of quoting header
set reply_to                         # reply to Reply to: field
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies
set forward_quote                    # include message in forwards

# deal with postponed messages
# bind compose p postpone-message
bind index p recall-message

# encryption
set crypt_use_gpgme=yes
set crypt_replysign=yes
set crypt_autosign=yes
set crypt_replysignencrypted=yes
set crypt_verify_sig=yes

set pgp_timeout=3600
set pgp_use_gpg_agent=yes


source ~/.mutt/gpg.rc
my_hdr X-PGP-Key:https://panashefundira.me/pgp

auto_view text/html
set charset = UTF-8

# warn if there is no attachment when attachments are mentioned
# ask whether to abort sending
set abort_noattach = ask-yes
# search for the following regex in the body of the email
set attach_keyword = "\\<attach(|ed|ments?)\\>"

# show visual progress bar for long running processes
color progress black white

# where I keep my aliases
set alias_file=~/.mutt/aliases
set sort_alias=alias
source $alias_file

# bind index,pager,attach <F5>  redraw-screen
bind index <F5>  refresh
bind pager <F5>  redraw-screen

# Handler for gpg encrypted mailboxes
# gpg does not support appending to an encrypted file
open-hook   '\.gpg$' "gpg --decrypt --compressalgo bzip2 < '%f' > '%t'"
close-hook  '\.gpg$' "gpg --encrypt --recipient 51BF74B5 --compressalgo bzip2 < '%t' > '%f'"

# alternate email addresses
alternates 'fundirap([-+].*)?@.*|contact([-+].*)?@panashefundira\.me'

subscribe password-store
subscribe tmux-users
subscribe tor-dev
subscribe gnupg-users

bind index,pager \cf next-page
bind index,pager \cb previous-page
