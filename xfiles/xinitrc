# Load X resources
xrdb -load ~/.Xresources &

xrdb -I$HOME/.colors -merge ~/.Xresources

# custom keybinding
xmodmap ~/.xmodmap

# run wallpaper - custom script
wallpaper &

xsetroot -cursor_name left_ptr &

# screen locking with xautolock and slock
xautolock -time 10 -locker slock &

unclutter &

redshift &

xmobar &

exec xmonad
