#!/bin/bash

alias b=bundle
alias be='bundle exec'
alias bjs="bundle exec jekyll serve"
alias bm='bundle exec rake db:migrate'
alias brownnoise='play -c 2 -n synth brownnoise'
alias c="cargo"
alias cb="cargo build"
alias cl="clear"
alias cr="cargo run"
alias ct="cargo test"
alias cw="cargo watch"
alias dbresetseed="bundle exec rake db:migrate:reset && bundle exec rake db:seed"
alias ef="exercism fetch"
alias es="exercism submit"
alias exc="~/code/programming-problems/exercism.io"
alias gu=guard
alias gw="gcc -Wconversion"
alias id_rsa="pass -c id_rsa"
alias ls='ls --color --group-directories-first'
alias n=nvim
alias news="newsbeuter"
alias ntest="LC_ALL=C make test && make oldtest"
alias pinknoise='play -c 2 -n synth pinknoise'
alias ra=rails
alias rc="rails console"
alias rs="rails server"
alias tl="tmux ls"
alias vg="vimgolf put"
alias whitenoise='play -c 2 -n synth whitenoise'
alias zc="nvim ~/.zshrc"
alias zr=". ~/.zshrc"
alias xstuff="xrandr --output DP2 --auto"
# TODO this should be a script that hooks into a keyboard being inserted
alias keyboard="xmodmap ~/.Xmodmap; xbindkeys; xcape"
alias ssh-bit="ssh-add -t 7200 ~/.ssh/bit-bucket"
alias bi="beet import"
alias update="sudo pacman -Syyu"
alias uninstall="sudo pacman -Rns"
